{
  "compilerOptions": {
    "module": "ESNext", // Use ESNext module system (for ESM)
    "target": "ESNext", // Target the latest ECMAScript version
    "moduleResolution": "Node", // Resolve modules using Node's resolution algorithm
    "esModuleInterop": true, // Allows interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports even if thereâ€™s no default export
    "skipLibCheck": true, // Skip checking the type definitions of libraries
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true, // Generate source maps for debugging
    "strict": true // Enable strict type checking
  },
  "include": ["./**/*.ts"], // Include all .ts files in the project
  "exclude": ["node_modules"] // Exclude the node_modules folder
}
